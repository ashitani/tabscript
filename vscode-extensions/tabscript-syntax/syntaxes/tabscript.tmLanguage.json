{
    "name": "TabScript",
    "scopeName": "source.tabscript",
    "patterns": [
        {
            "name": "comment.line.number-sign.tabscript",
            "match": "^#.*$",
            "comment": "Line comments starting with #"
        },
        {
            "name": "comment.line.double-slash.tabscript",
            "match": "//.*$",
            "comment": "Line comments ending with //"
        },
        {
            "name": "meta.section.tabscript",
            "match": "^\\$section\\s*=\\s*.*$",
            "comment": "Section lines"
        },
        {
            "name": "meta.triplet.tabscript",
            "match": "\\]3",
            "comment": "Triplet notation"
        },
        {
            "name": "meta.metadata.tabscript",
            "match": "^\\$(?!section\\s*=)[^\\s]+(?:\\s*=\\s*.*)?$",
            "comment": "Metadata lines starting with $ (excluding section)"
        },
        {
            "name": "tab.chord-name.tabscript",
            "match": "@[^\\s]+",
            "comment": "Chord name starting with @"
        },
        {
            "name": "tab.string-number.tabscript",
            "match": "\\b([1-6])-",
            "comment": "String number (1-6)"
        },
        {
            "name": "tab.fret-number.tabscript",
            "match": "-([0-9]+)(?=:|$)",
            "comment": "Fret number"
        },
        {
            "name": "tab.note-length.tabscript",
            "match": ":([0-9]+)|r([0-9]+)",
            "comment": "Note length (both : and r notation)"
        }
    ]
} 